
<div class='nested-fields mt-2 mb-2 card px-4 py-4 accordion-item'>
  <div class="accordion-header" id="heading-obj-<%= f.object.id %>">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#acc-obj-<%= f.object.id %>" aria-expanded="false" aria-controls="acc-obj-<%= f.object.id %>">
      <% if f.object.id %>
        <%= f.object.digital_object.title %> from <%= f.object.digital_object.dataProvider %>
      <% else %>
        New Exhibit Object
      <% end %>
      </button>
  </div>
  <div id="acc-obj-<%= f.object.id %>" class="accordion-collapse collapse" aria-labelledby="heading-obj-<%= f.object.id %>" >
  <div class="accordion-body">
    <%= f.collection_select(:digital_object_id, @digital_objects, :id, :title, { prompt: "Press shift to select multiple options" }, {class: "form-select shadow rounded mb-4" } ) %>
    <div class="field">
      <%= f.label :content, "Exhibit Note", class: "form-label mt-4" %>
      <%= f.rich_text_area :content, class: "form-control" %>
    </div>
      <%= f.hidden_field :object_order, class: "object-order" %>
    <%= link_to_remove_association "Remove object", f, class: "btn btn-outline-danger mt-2" %>
    <script>
      $("#digital_objects").trigger("new_object");
    </script>
    </div>
  </div>
</div>