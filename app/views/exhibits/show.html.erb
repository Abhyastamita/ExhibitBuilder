<p id="notice"><%= notice %></p>
<div class="container">
  <div class="mx-auto d-flex justify-content-around flex-wrap" >
    <div class="card shadow col-sm-11  mb-4 shadow rounded">
      <div class="card-header">
        <h1>
          <%= @exhibit.title %>
        </h1>
      </div>
      <div class="card-body">
        <p>
          <%= @exhibit.description_content %>
        </p>
      </div>
    </div>

    <% if @exhibit.digital_objects.any? %>
        <%= render @exhibit.digital_objects.sort_by { |digital_object| digital_object.object_order } %>
    <% end %>
  </div>

  <%= link_to 'Edit', edit_exhibit_path(@exhibit) %> |
  <%= link_to 'Back', exhibits_path %>
</div>
