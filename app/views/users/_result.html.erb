<div class="results-inline">
    <%= render "/layouts/messages"%>
</div>
<% if @stock %>
    <div class="card card-header mt-4 results-inline">
        <span class="stockticker"><strong>Symbol: </strong> <%= @stock.ticker.upcase %></span>
        <span class="stockname"><strong>Name: </strong> <%= @stock.name %></span>
        <span class="stockprice"><strong>Price: </strong> <%= @stock.last_price %></span>
    </div>
<% end %>